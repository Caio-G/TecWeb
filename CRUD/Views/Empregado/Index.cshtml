@model IEnumerable<MVCAdoDemo.Models.Empregado>           
@{            ViewData["Title"] = "Index";        }    
    <h2>Inicio</h2>    
    <p>        
        <a asp-action="Create">Novo</a>    
    </p>    
    <table class="table">        
        <thead>            
            <tr>                
                <th>                    
                    @Html.DisplayNameFor(model => model.Nome)                
                </th>                
                <th>                   
                    @Html.DisplayNameFor(model => model.Genero)                
                </th>                
                <th>                   
                    @Html.DisplayNameFor(model => model.Departamento)               
                </th>                
                <th>                    
                    @Html.DisplayNameFor(model => model.Cidade)                
                    </th>                
                    <th>

                    </th>            
            </tr>        
        </thead>        
        <tbody>            
            @foreach (var item in Model)    
                {                
                    <tr>                    
                        <td>                        
                            @Html.DisplayFor(modelItem => item.Nome)                    
                        </td>                    
                        <td>                        
                            @Html.DisplayFor(modelItem => item.Genero)                    
                        </td>                    
                        <td>                        
                            @Html.DisplayFor(modelItem => item.Departamento)                   
                        </td>                    
                        <td>                        
                            @Html.DisplayFor(modelItem => item.Cidade)                    
                        </td>                    
                        <td>                        
                            <a asp-action="Edit" asp-route-id="@item.ID">Editar</a> |                        
                            <a asp-action="Details" asp-route-id="@item.ID">Detalhes</a> |                        
                            <a asp-action="Delete" asp-route-id="@item.ID">Deletar</a>                    
                        </td>                
                    </tr>            
                }       
        </tbody>    
    </table>
